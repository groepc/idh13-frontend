{% extends 'base.html.twig' %}
{% block body %}
    <form method="post" action="/country/create">
        <div class="form-group row">
            <label for="example-text-input" class="col-xs-2 col-form-label">Land code</label>
            <div class="col-xs-10">
                <input class="form-control" type="text" id="example-text-input" name="code">
            </div>
        </div>
        <div class="form-group row">
            <label for="example-text-input" class="col-xs-2 col-form-label">Land naam</label>
            <div class="col-xs-10">
                <input class="form-control" type="text"  id="example-search-input" name="name">
            </div>
        </div>
        <div class="form-group row">
            <label for="example-text-input" class="col-xs-2 col-form-label">Tailcode</label>
            <div class="col-xs-10">
                <input class="form-control" type="text" id="example-email-input" name="tailcode">
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Opslaan</button>
            </div>
        </div>
    </form>
{% endblock %}